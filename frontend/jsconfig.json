{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./src",  // Ensures imports are resolved from "src/"
    "paths": {
      "@/*": ["./*"]   // Use "@/someFile" instead of "../../../someFile"
    }
  }
}